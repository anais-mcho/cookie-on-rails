<br><h1 class="text-center">👩‍🍳 Toutes vos recettes ! 👨‍🍳</h1><br>

<%= link_to "Ajouter une nouvelle recette", new_todo_path, class: 'btn btn-outline-dark' %><br><br>

<div class="row">
<% @todos.each do |todo| %>
  <div class="col-sm-6 mb-3">
    <div class="card">

      <div class="card-body">
        <h5 class="card-title d-flex justify-content-center"><%= link_to todo.title, todo_path(todo.id) %></h5><br>
        <a class="btn btn-outline-primary d-flex justify-content-center mb-2" <%= link_to "modifier", edit_todo_path(todo[:id]) %> </a>
        <a class="btn btn-outline-danger d-flex justify-content-center" <%= link_to "effacer", todo, method: :delete, data: { confirm: "Souhaitez-vous vraiment effacer cette délicieuse recette ?" }%> </a>
      </div>    

    </div>
  </div>
  <% end %>
</div>

